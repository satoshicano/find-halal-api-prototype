<p id="notice"><%= notice %></p>

<%= link_to 'Check Halal', new_picture_path, class: 'btn btn-primary' %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <th scope="row"><%= picture.id %></th>
        <td><%= image_tag picture.image.url, class: "img-thumbnail" %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
